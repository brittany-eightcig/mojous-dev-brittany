<div class="index-section custom-section" data-section-id="{{ section.id }}" data-section-type="Mojo Section 4-section">
  <div class="row">
    {% if section.settings.title != blank %}
    <h2 class="sections"><span>{{ section.settings.title | escape }}</span></h2>
    {% endif %}

    {% for block in section.blocks %}
    {%- assign image_size = '450x' -%}
    {%- assign cont_width = 'desktop-4' -%}

    <div class="staggered-image-wrapper {{ cont_width }} mobile-3 float-{{ block.settings.alignment }} section-{{ section.id }}">
      {%- assign img_url = block.settings.image | img_url: image_size -%}
      <div class="image-layout" {{ block.shopify_attributes }}>

          
          {% if block.settings.link != blank %}<a href="{{ block.settings.link }}">{% endif %}
          {% if block.settings.image != blank %}
          <img src="{{ img_url }}">
          {% else %}
          <div class="onboard">
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
          {% endif %}
          {% if block.settings.link != blank %}</a>{% endif %}
        
      </div>
      {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
      {% endif %}
    </div>
    {% endfor %}
  </div>
</div>

<div class="clear"></div>

<style>
  [data-section-id="{{ section.id }}"] { background-color: {{ section.settings.bg_color }}; padding-top: 15px;}
  .index-section .staggered-image-wrapper.section-{{ section.id }} h2 { margin-left: 0; margin-right: 0; width: 100%; }
  .staggered-image-wrapper.float-left { float: left; display: inline! important; }
  .staggered-image-wrapper.float-right { float: right! important; display: inline! important; }

  [data-section-id="{{ section.id }}"] .custom-content-featured-text-center, .custom-content-featured-text-center h2.sections, .custom-content-featured-text-center h2.sections span { text-align: center; }
  .custom-section a.button { text-align: center! important; }
</style>

{% schema %}
{  
   "name":"Mojo Section 4",
   "max_blocks":6,
   "settings":[  
      {
         "type":"text",
         "id":"title",
         "label":"Heading",
         "default":"Mojo Section 4"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "background color",
        "default": "#e4e4e4"
      }
   ],
   "blocks":[  
      {  
         "type":"image",
         "name":"Image",
         "settings":[  
          {  
               "type":"select",
               "id":"alignment",
               "label":"Alignment",
               "default":"left",
               "options":[  
                  {  
                     "value":"left",
                     "label":"Left"
                  },
                  {  
                     "value":"right",
                     "label":"Right"
                  }
               ]
            },
            {  
               "type":"image_picker",
               "id":"image",
               "label":"Image"
            },
            {  
               "type":"url",
               "id":"link",
               "label":"Link",
               "info":"Optional"
            },
            {
              "type": "text",
              "id": "button-text",
              "label": "Button text"
            }
         ]
      }           
   ],
   "presets":[  
      {  
         "name":"Mojo Section 4",
         "category":"Image",
         "blocks":[  
            {  
               "type":"image"
            },
            {  
               "type":"image"
            },
            {  
               "type":"image"
            }
         ]
      }
   ]
}


{% endschema %}
